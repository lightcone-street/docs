      },
      "ConditionalToken": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "outcome_index": { "type": "integer", "description": "0-indexed outcome", "example": 0 },
          "token_address": { "type": "string", "description": "Conditional token address", "example": "5BNoPgYemyrbS4ub7MTuKczoYA7qtJZTj5m7xVanupPR" },
          "name": { "type": "string", "nullable": true, "description": "On-chain name", "example": null },
          "symbol": { "type": "string", "nullable": true, "description": "On-chain symbol", "example": null },
          "uri": { "type": "string", "nullable": true, "description": "On-chain URI", "example": null },
          "created_at": { "type": "string", "format": "date-time", "example": "2026-01-09T19:21:40.789913Z" },
          "display_name": { "type": "string", "nullable": true, "description": "E.g., 'YES-BTC'", "example": "YES-BTC" },
          "outcome": { "type": "string", "nullable": true, "description": "E.g., 'YES' or 'NO'", "example": "YES" },
          "deposit_symbol": { "type": "string", "nullable": true, "description": "E.g., 'BTC'", "example": "BTC" },
          "short_name": { "type": "string", "nullable": true, "description": "E.g., 'YBTC'", "example": "YBTC" },
          "description": { "type": "string", "nullable": true, "example": "YES outcome token backed by lcBTC - pays out if market resolves YES" },
          "icon_url": { "type": "string", "nullable": true, "example": null },
          "metadata_uri": { "type": "string", "nullable": true, "example": null },
          "decimals": { "type": "integer", "nullable": true, "example": 6 }
        }
      },
      "Orderbook": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 2 },
          "market_pubkey": { "type": "string", "example": "FjVJXzKknRoxgdQHNfdMkzq2vswGacM3MHiZhahczBsL" },
          "orderbook_id": { "type": "string", "example": "5BNoPgYe_CrhujZLf" },
          "base_token": { "type": "string", "example": "5BNoPgYemyrbS4ub7MTuKczoYA7qtJZTj5m7xVanupPR" },
          "quote_token": { "type": "string", "example": "CrhujZLfmzffVjwUTk6wL1mYeF9nRkx4MBvHmEotnaDF" },
          "tick_size": { "type": "integer", "example": 1000 },
          "total_bids": { "type": "integer", "example": 0 },
          "total_asks": { "type": "integer", "example": 0 },
          "last_trade_price": { "type": "integer", "nullable": true, "example": null },
          "last_trade_time": { "type": "string", "format": "date-time", "nullable": true, "example": null },
          "active": { "type": "boolean", "example": true },
          "created_at": { "type": "string", "format": "date-time", "example": "2026-01-09T20:43:24.107351Z" },
          "updated_at": { "type": "string", "format": "date-time", "example": "2026-01-09T20:48:02.278031Z" }
        }
      },
      "OrderbookDepth": {
        "type": "object",
        "properties": {
          "bids": { "type": "array", "items": { "$ref": "#/components/schemas/PriceLevel" } },
          "asks": { "type": "array", "items": { "$ref": "#/components/schemas/PriceLevel" } }
        },
        "example": {
          "bids": [
            { "price": 650000, "quantity": 50000000 },
            { "price": 640000, "quantity": 120000000 },
            { "price": 630000, "quantity": 80000000 }
          ],
          "asks": [
            { "price": 660000, "quantity": 45000000 },
            { "price": 670000, "quantity": 90000000 },
            { "price": 680000, "quantity": 150000000 }
          ]
        }
      },
      "PriceLevel": {
        "type": "object",
        "properties": {
          "price": { "type": "integer", "description": "Price scaled by 1e6", "example": 650000 },
          "quantity": { "type": "integer", "example": 50000000 }
        }
      },
      "SubmitOrderRequest": {
        "type": "object",
        "required": ["maker", "nonce", "market", "base_token", "quote_token", "side", "maker_amount", "taker_amount", "signature", "orderbook_id"],
        "properties": {
          "maker": { "type": "string", "description": "Solana wallet pubkey", "example": "DYw8jCTfwHNRJhhmFcbXvVDTqWMEVFBX6ZKUmG5CNSKK" },
          "nonce": { "type": "integer", "format": "int64", "example": 1736456789000 },
          "market": { "type": "string", "description": "Market pubkey", "example": "FjVJXzKknRoxgdQHNfdMkzq2vswGacM3MHiZhahczBsL" },
          "base_token": { "type": "string", "example": "5BNoPgYemyrbS4ub7MTuKczoYA7qtJZTj5m7xVanupPR" },
          "quote_token": { "type": "string", "example": "CrhujZLfmzffVjwUTk6wL1mYeF9nRkx4MBvHmEotnaDF" },
          "side": { "type": "integer", "description": "0 = BID (buy base), 1 = ASK (sell base)", "example": 0 },
          "maker_amount": { "type": "integer", "format": "int64", "description": "Amount maker gives (in base units)", "example": 350000 },
          "taker_amount": { "type": "integer", "format": "int64", "description": "Amount maker wants (in base units)", "example": 650000 },
          "expiration": { "type": "integer", "format": "int64", "default": 0, "description": "Unix timestamp, 0 = no expiration", "example": 0 },
          "signature": { "type": "string", "description": "Base58 Ed25519 signature", "example": "5KJhg7Ybx8qF9gXZvVmJkLpWvN3cDrMhYeAqRs7TuBn4mZ8HwK2jXyNfPLbQdCeRgVmHsJkYpN9tUoWxZcFvGhR" },
          "orderbook_id": { "type": "string", "example": "5BNoPgYe_CrhujZLf" }
        }
      },
      "CancelOrderRequest": {
        "type": "object",
        "required": ["order_hash", "maker"],
        "properties": {
          "order_hash": { "type": "string", "example": "0xabc123def456789012345678901234567890123456789012345678901234abcd" },
          "maker": { "type": "string", "example": "DYw8jCTfwHNRJhhmFcbXvVDTqWMEVFBX6ZKUmG5CNSKK" }
        }
      },
      "CancelAllOrdersRequest": {
        "type": "object",
        "required": ["maker", "orderbook_id"],
        "properties": {
          "maker": { "type": "string", "example": "DYw8jCTfwHNRJhhmFcbXvVDTqWMEVFBX6ZKUmG5CNSKK" },
          "orderbook_id": { "type": "string", "example": "5BNoPgYe_CrhujZLf" }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "order_hash": { "type": "string", "example": "0xabc123def456789012345678901234567890123456789012345678901234abcd" },
          "maker": { "type": "string", "example": "DYw8jCTfwHNRJhhmFcbXvVDTqWMEVFBX6ZKUmG5CNSKK" },
          "side": { "type": "integer", "example": 0 },
          "price": { "type": "integer", "example": 650000 },
          "original_quantity": { "type": "integer", "example": 100000000 },
          "remaining_quantity": { "type": "integer", "example": 75000000 },
          "status": { "type": "string", "example": "Open" }
        }
      },
      "UserPositionsResponse": {
        "type": "object",
        "properties": {
          "owner": { "type": "string", "example": "DYw8jCTfwHNRJhhmFcbXvVDTqWMEVFBX6ZKUmG5CNSKK" },
          "total_markets": { "type": "integer", "example": 3 },
          "positions": { "type": "array", "items": { "$ref": "#/components/schemas/UserPositionResponse" } }
        }
      },
      "UserMarketPositionsResponse": {
        "type": "object",
        "properties": {
          "owner": { "type": "string", "example": "DYw8jCTfwHNRJhhmFcbXvVDTqWMEVFBX6ZKUmG5CNSKK" },
          "market_pubkey": { "type": "string", "example": "FjVJXzKknRoxgdQHNfdMkzq2vswGacM3MHiZhahczBsL" },
          "positions": { "type": "array", "items": { "$ref": "#/components/schemas/UserPositionResponse" } }
        }
      },
      "UserPositionResponse": {
        "type": "object",
        "properties": {
          "position_pubkey": { "type": "string", "example": "Pos1t1on111111111111111111111111111111111111" },
          "owner": { "type": "string", "example": "DYw8jCTfwHNRJhhmFcbXvVDTqWMEVFBX6ZKUmG5CNSKK" },
          "market_pubkey": { "type": "string", "example": "FjVJXzKknRoxgdQHNfdMkzq2vswGacM3MHiZhahczBsL" },
          "deposit_asset": { "type": "string", "example": "4o5Vsd7iPu97qkKypojXDbpu8BR3t5poD8ThGo8hnUKy" },
          "outcomes": { "type": "array", "items": { "$ref": "#/components/schemas/OutcomeBalance" } }
        }
      },
      "OutcomeBalance": {
        "type": "object",
        "properties": {
          "outcome_index": { "type": "integer", "example": 0 },
          "mint": { "type": "string", "example": "5BNoPgYemyrbS4ub7MTuKczoYA7qtJZTj5m7xVanupPR" },
          "idle": { "type": "integer", "description": "Available balance", "example": 500000 },
          "on_book": { "type": "integer", "description": "Locked in orders", "example": 250000 }
        }
      },
      "PriceHistoryResponse": {
        "type": "object",
        "properties": {
          "candles": { "type": "array", "items": { "$ref": "#/components/schemas/Candle" } },
          "has_more": { "type": "boolean", "example": true },
          "next_cursor": { "type": "integer", "example": 1705312200 }
        }
      },
      "Candle": {
        "type": "object",
        "properties": {
          "timestamp": { "type": "integer", "description": "Unix timestamp (seconds)", "example": 1705312800 },
          "midpoint": { "type": "integer", "description": "Midpoint price between best bid and ask (scaled by 1e6)", "example": 657500 },
          "open": { "type": "integer", "description": "Opening price (scaled by 1e6, only if include_ohlcv=true)", "example": 650000, "nullable": true },
          "high": { "type": "integer", "description": "Highest price (scaled by 1e6, only if include_ohlcv=true)", "example": 670000, "nullable": true },
          "low": { "type": "integer", "description": "Lowest price (scaled by 1e6, only if include_ohlcv=true)", "example": 640000, "nullable": true },
          "close": { "type": "integer", "description": "Closing price (scaled by 1e6, only if include_ohlcv=true)", "example": 665000, "nullable": true },
          "volume": { "type": "integer", "description": "Total volume traded (only if include_ohlcv=true)", "example": 125000000, "nullable": true }
        },
        "example": {
          "timestamp": 1705312800,
          "midpoint": 657500
        }
      },
      "TradesResponse": {
        "type": "object",
        "properties": {
          "trades": { "type": "array", "items": { "$ref": "#/components/schemas/Trade" } },
          "has_more": { "type": "boolean", "example": true },
          "next_cursor": { "type": "integer", "example": 1542 }
        }
      },
      "Trade": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1543 },
          "price": { "type": "integer", "description": "Trade price (scaled by 1e6)", "example": 655000 },
          "quantity": { "type": "integer", "description": "Trade quantity in base units", "example": 10000000 },
          "side": { "type": "string", "description": "Taker side: 'buy' or 'sell'", "example": "buy" },
          "timestamp": { "type": "string", "format": "date-time", "example": "2025-06-15T14:23:45Z" }
        }
      }
    }
  }
}
