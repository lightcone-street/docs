          "category": { "type": "string", "nullable": true, "example": "Crypto" },
          "tags": { "type": "array", "items": { "type": "string" }, "example": ["vitalik", "ethereum", "eth", "foundation"] },
          "featured_rank": { "type": "integer", "description": "Featured rank (0 = not featured, 1-10 = higher means more prominent)", "minimum": 0, "maximum": 10, "example": 0 },
