          "symbol": { "type": "string", "nullable": true, "description": "E.g., 'BTC'", "example": "BTC" },
          "deposit_asset": { "type": "string", "description": "Collateral token address", "example": "4o5Vsd7iPu97qkKypojXDbpu8BR3t5poD8ThGo8hnUKy" },
          "id": { "type": "integer", "example": 1 },
          "market_pubkey": { "type": "string", "example": "FjVJXzKknRoxgdQHNfdMkzq2vswGacM3MHiZhahczBsL" },
          "vault": { "type": "string", "description": "Vault PDA holding collateral", "example": "5VMDUrLacaMVWqiBt8VNKnBfnLhY5kVKVJph6KWcpBvM" },
          "num_outcomes": { "type": "integer", "example": 2 },
          "created_at": { "type": "string", "format": "date-time", "example": "2026-01-09T19:21:40.760798Z" },
